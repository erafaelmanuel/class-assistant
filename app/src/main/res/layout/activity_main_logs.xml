<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/colorWhite"
            android:paddingBottom="130dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </LinearLayout>

        <FrameLayout
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <ProgressBar
                android:id="@+id/progress_voice"
                android:layout_gravity="bottom"
                android:background="@color/Orange"
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <FrameLayout
                android:layout_marginBottom="4dp"
                android:background="@color/colorMidNightBlue"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:background="#b1a483"
                        android:layout_gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="70dp">

                        <Button
                            android:background="@drawable/turn_on"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp" />
                    </FrameLayout>

                    <Button
                        android:background="@drawable/icon_profile"
                         android:layout_marginLeft="20dp"
                        android:layout_gravity="left|center"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <Button
                        android:background="@drawable/icon_help"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="right|center"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                </FrameLayout>
            </FrameLayout>
        </FrameLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:background="@color/colorMidNightBlue"
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <LinearLayout
            android:background="@color/Orange"
            android:layout_width="match_parent"
            android:layout_height="4dp">

        </LinearLayout>

    </LinearLayout>
</FrameLayout>